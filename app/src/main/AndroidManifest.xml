<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidfragmant.cricket.allabout">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <permission
        android:name="${applicationId}.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="${applicationId}.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:name=".ParseApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CricketNewsListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.FixtureActivity"
            android:label="Fixture"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.NewsDetailsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.Highlights"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".videoplayers.HighlightsVids"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.LiveScore"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LiveScoreListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TeamDetailsActivity"
            android:label="Team Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TeamProfile"
            android:label="Team Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.PastMatchesActivity"
            android:label="Past Matches"
            android:screenOrientation="portrait" />
        <activity
            android:name=".videoplayers.FrameStream"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name=".videoplayers.LiveStreamView"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name=".videoplayers.DMPlayerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name=".activity.TrollPostListActivity"
            android:label="Cricket Trolls"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.PlayerProfileActivity"
            android:label="Player Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ActivityMatchDetails"
            android:label="Score Details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.FullCommentryActivity"
            android:label="Full Commentry"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RankingActivity"
            android:label="Ranking"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RecordsActivity"
            android:label="Records"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RecordDetailsActivity"
            android:label="Record Details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.PointsTableActivity"
            android:label="Points Table"
            android:screenOrientation="portrait" />
        <activity
            android:name=".cricbuzz.CricbuzzNewsListActivity"
            android:label="Points Table"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.QuotesListActivity"
            android:label="Quotes"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.GalleryActivity"
            android:label="Gallery"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.SeriesStatsActivity"
            android:label="Series Stats"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.SeriesStatsDetailsActivity"
            android:label="Series Stats Details"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.GalleryOfMatchActivity"
            android:label="Gallery"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.InsertOpinionActivity"
            android:label="Discussion"
            android:screenOrientation="portrait" />

        <service android:name="com.batch.android.BatchPushService" />

        <receiver
            android:name="com.batch.android.BatchPushReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="${applicationId}" />
            </intent-filter>
        </receiver>

        <!--
          Optionally, register AnalyticsReceiver and AnalyticsService to support background
          dispatching on non-Google Play devices
        -->
        <receiver
            android:name="com.google.android.gms.analytics.AnalyticsReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.google.android.gms.analytics.ANALYTICS_DISPATCH" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.analytics.AnalyticsService"
            android:enabled="true"
            android:exported="false" />

        <!--
             Optionally, register CampaignTrackingReceiver and CampaignTrackingService to enable
             installation campaign reporting
        -->
        <receiver
            android:name="com.google.android.gms.analytics.CampaignTrackingReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <service android:name="com.google.android.gms.analytics.CampaignTrackingService" />

        <service
            android:name=".util.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service android:name=".util.FirebaseIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>