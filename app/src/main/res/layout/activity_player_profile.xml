<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_player_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="17sp"
                    android:textColor="@color/Black"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:id="@+id/tv_player_born"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Born"
                    android:textSize="13sp"
                    android:textColor="@color/Black"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:id="@+id/tv_player_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textSize="13sp"
                    android:textColor="@color/Black"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:id="@+id/tv_player_major_teams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Major Teams"
                    android:textSize="13sp"
                    android:textColor="@color/Black"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:id="@+id/tv_player_playing_role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Playing Role"
                    android:textSize="13sp"
                    android:textColor="@color/Black"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:id="@+id/tv_player_batting_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Batting Style"
                    android:textSize="13sp"
                    android:textColor="@color/Black"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:id="@+id/tv_player_bowling_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bowling Style"
                    android:textSize="13sp"
                    android:textColor="@color/Black"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/player_image"
                android:src="@drawable/default_image"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Batting"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:textColor="@color/Black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/holo_blue_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/CornflowerBlue">
            <TextView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/Black"/>
            <TextView
                android:gravity="center"
                android:text="Mat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/Black"/>
            <TextView
                android:gravity="center"
                android:text="Runs"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/Black"/>
            <TextView
                android:gravity="center"
                android:text="HS"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/Black"/>
            <TextView
                android:gravity="center"
                android:text="Ave"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/Black"/>
            <TextView
                android:gravity="center"
                android:text="SR"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/Black"/>
            <TextView
                android:gravity="center"
                android:text="50"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/Black"/>
            <TextView
                android:gravity="center"
                android:text="100"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/Black"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/holo_blue_dark"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/batting_record_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/holo_blue_dark"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bowling"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:textColor="@color/Black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/holo_blue_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/CornflowerBlue">
            <TextView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/Black"/>
            <TextView
                android:gravity="center"
                android:text="Mat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/Black"/>

            <TextView
                android:gravity="center"
                android:text="Wkts"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/Black"/>
            <TextView
                android:gravity="center"
                android:text="BBI"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/Black"/>
            <TextView
                android:gravity="center"
                android:text="Ave"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/Black"/>
            <TextView
                android:gravity="center"
                android:text="Econ"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/Black"/>
            <TextView
                android:gravity="center"
                android:text="SR"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/Black"/>

            <TextView
                android:gravity="center"
                android:text="5W"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/Black"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/holo_blue_dark"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/bowling_record_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/holo_blue_dark"/>

        <TextView
            android:id="@+id/tv_player_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="profile"
            android:textSize="15sp"
            android:padding="5dp"
            android:textColor="@color/Black"/>

    </LinearLayout>
</ScrollView>