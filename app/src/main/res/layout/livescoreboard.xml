<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/oneid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/summary_matchresult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="ds"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/scoreboard"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/oneid"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/liveteamone_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp" />
                <TextView
                    android:id="@+id/team1sore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="cz"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/crunrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="fds"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/border1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/scoreboard"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:id="@+id/batsmnScoreboard"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/border1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_batsmenName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Batsman"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_runs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="R"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_balls"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="B"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_fours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="4S"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_six"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="6S"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/batsmanlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/batsmnScoreboard"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/list_batsmandetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/batsmanlist"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/bowlingboard"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/liveteamtwo_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp" />

                <TextView
                    android:id="@+id/team2sore"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="cdsa"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:id="@+id/border2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/bowlingboard"
                android:background="@color/colorPrimary" />

            <LinearLayout

                android:id="@+id/bowlerdtails"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/border2"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/title_bowlerName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Bowler"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/title_overs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="O"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/title_maiden"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="M"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/title_bowlruns"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="R"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/title_wickets"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="W"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/title_eco"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Eco"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>


            <ListView
                android:id="@+id/list_bowlerdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <LinearLayout

                android:id="@+id/lastbatsman_title"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/list_bowlerdetails"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Commentary"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>

            <ListView
                android:id="@+id/livecommentarylist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lastbatsman_title" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>