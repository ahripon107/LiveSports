<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:background="@color/cardbackground">

        <TextView
            android:id="@+id/tvAgainst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textColor="@color/Green"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPlayed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Played: "
                android:textSize="18sp"
                android:textColor="@color/MediumPurple"/>

            <TextView
                android:id="@+id/tvWins"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wins: "
                android:textSize="18sp"
                android:textColor="@color/cpb_green"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLoss"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Loss: "
                android:textSize="18sp"
                android:textColor="@color/Red" />

            <TextView
                android:id="@+id/tvDraw"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Draw/Tie: "
                android:textSize="18sp"
                android:textColor="@color/Blue"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tvHighestInnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Highest Innings: "
            android:textColor="@color/Black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvBBI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best Bowling Innings: "
            android:textColor="@color/Black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvBestIndividual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best Individual Innings: "
            android:textColor="@color/Black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvMostWickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Wickets: "
            android:textColor="@color/Black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvMostRuns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Runs: "
            android:textColor="@color/Black"
            android:textSize="15sp" />


    </LinearLayout>
</android.support.v7.widget.CardView>